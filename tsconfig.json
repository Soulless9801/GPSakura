{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],

        "module": "ESNext",
        "moduleResolution": "Bundler",

        "jsx": "react-jsx",

        "strict": true,
        "skipLibCheck": true,

        "allowJs": true,
        "checkJs": false,

        "isolatedModules": true,
        "noEmit": true,

        "resolveJsonModule": true
    },
    "include": ["src"]
}
